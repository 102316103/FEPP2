<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
	<id>${assembly-dependencies}</id>
	<formats>
		<format>${assembly-format-tar-gz}</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<baseDirectory>${assembly-fep-app}</baseDirectory>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>${assembly-dependencies}</outputDirectory>
			<unpack>false</unpack>
			<excludes>
				<exclude>com.syscom.feptcb:fep-*</exclude>
				<exclude>org.springframework.boot:spring-boot-devtools</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<!-- 將fep-lib/lib/目錄下的jar檔包進去 -->
		<fileSet>
			<directory>${assembly-lib-lib-path}</directory>
			<outputDirectory>${assembly-dependencies}</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
			<excludes>
				<exclude>fep-*.jar</exclude>
			</excludes>
		</fileSet>
	</fileSets>
</assembly>