<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
	<id>${assembly-cmd}${assembly-func}</id>
	<formats>
		<format>${assembly-format-tar-gz}</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<baseDirectory>${assembly-fep-app}/${project.artifactId}${assembly-func}</baseDirectory>
	<files>
		<file>
			<source>${assembly-config-path}/run.bat</source>
			<outputDirectory>.</outputDirectory>
			<destName>${project.artifactId}${assembly-func}-run.bat</destName>
			<fileMode>${assembly-file-mode}</fileMode>
			<filtered>true</filtered>
		</file>
		<file>
			<source>${assembly-config-path}/fep-start.sh</source>
			<outputDirectory>.</outputDirectory>
			<destName>${project-shell}${assembly-shell}_start.sh</destName>
			<fileMode>${assembly-file-mode}</fileMode>
			<lineEnding>${assembly-lineEnding}</lineEnding>
			<filtered>true</filtered>
		</file>
		<file>
			<source>${assembly-config-path}/fep-stop.sh</source>
			<outputDirectory>.</outputDirectory>
			<destName>${project-shell}${assembly-shell}_stop.sh</destName>
			<fileMode>${assembly-file-mode}</fileMode>
			<lineEnding>${assembly-lineEnding}</lineEnding>
			<filtered>true</filtered>
		</file>
		<file>
			<source>${assembly-config-path}/fep-status.sh</source>
			<outputDirectory>.</outputDirectory>
			<destName>${project-shell}${assembly-shell}_status.sh</destName>
			<fileMode>${assembly-file-mode}</fileMode>
			<lineEnding>${assembly-lineEnding}</lineEnding>
			<filtered>true</filtered>
		</file>
		<file>
			<source>${assembly-config-path}/fep-run.sh</source>
			<outputDirectory>.</outputDirectory>
			<destName>${project-shell}${assembly-shell}_run.sh</destName>
			<fileMode>${assembly-file-mode}</fileMode>
			<lineEnding>${assembly-lineEnding}</lineEnding>
			<filtered>true</filtered>
		</file>
	</files>
</assembly>